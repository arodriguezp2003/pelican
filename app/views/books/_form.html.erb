<%= form_for @book, :html=> {multipart: true} do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title , class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :cover %><br>
    <%= f.file_field :cover , class:"form-control" %>
  </div>  
  <div class="form-group">
    <%= f.label :author %><br>
    <%= f.collection_select :author_id, Author.all, :id, :name,{},{class: "form-control"} %>
  </div>
  <div class="form-group">
    <%= f.label :editorial %><br>
 <%= f.collection_select :editorial_id, Editorial.all, :id, :name,{},{class: "form-control"} %>


   

  </div>
  <div class="form-group">
    <%= f.label :original_title %><br>
    <%= f.text_field :original_title  , class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :translation %><br>
    <%= f.text_field :translation , class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :edition %><br>
    <%= f.number_field :edition , class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :edition_date %><br>
    <div class="form-inline">
    <%= f.date_select :edition_date , {:order => [:day, :month, :year], :start_year => 1910, :end_year => 2020}, {:class => 'form-control'}  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :edition_place %><br>
    <%= f.text_field :edition_place , class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :publication_year %><br>
    <%= f.number_field :publication_year ,  {:class => "form-control"} %>

  </div>
  <div class="form-group">
    <%= f.label :isbn %><br>
    <%= f.text_field :isbn  , class:"form-control"%>
  </div>
  <div class="actions">
    <%= f.submit nil , class:"btn btn-primary" %>
  </div>
<% end %>
